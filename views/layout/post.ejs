<% var page ='post'%>

<% include ../templates/header.ejs%>

<body>

<!-- Navigation -->
<% include ../templates/nav.ejs%>


<!-- Page Header -->
<header class="masthead" style="background-image: url('/posts/<%=post.image%>')">

    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-heading">
                    <img src="/users/<%=post.user.image%>">
                    <h1><%=post.title%></h1>
                    <h2 class="subheading"><%=post.subtitle%></h2>
                    <span class="meta">Posted by
                <a href="#"><%=post.username%></a>
                on <%=post.createAt.toDateString()%></span>
                </div>

            </div>

        </div>

    </div>

</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <p > <%=post.post%></p>
            </div>
        </div>
    </div>
</article>

<hr>

<!-- Footer -->
<% include ../templates/footer.ejs%>

